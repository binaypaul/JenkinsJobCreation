pipeline {
agent any

parameters {
        string(name: 'NAME', defaultValue: 'Animesh', description: 'Name of the person?')
        booleanParam(name: 'GENDER', defaultValue: true, description: 'Check if Male, else Uncheck.')
}

    stages {
        stage('Start') {
            steps {
                echo 'Hello.. Starting...'
            }
        }
        stage ('Invoke_MyFirstSecondJob') {
            steps {
                build job: 'MyFirstJob', parameters: [string(name: 'NAME', value: ${params.NAME}), booleanParam(name: 'Gender', value: ${params.GENDER})]
                build job: 'MySecondJob', parameters: [string(name: 'NAME', value: ${params.NAME}), booleanParam(name: 'Gender', value: ${params.GENDER})]
            }
        }
        stage('End') {
            steps {
                echo 'Bye.. Finished.'
            }
        }
    }
}
